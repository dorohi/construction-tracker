generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  passwordHash  String
  name          String
  isAdmin       Boolean        @default(false)
  projects      Project[]
  suppliers     Supplier[]
  carriers      Carrier[]
  workers       Worker[]
  news          News[]
  newsReactions NewsReaction[]
  createdAt     DateTime       @default(now())
}

model Project {
  id          String     @id @default(cuid())
  name        String
  description String?
  budget      Float?
  user        User       @relation(fields: [userId], references: [id])
  userId      String
  categories  Category[]
  order       Int?
  expenses    Expense[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Category {
  id        String    @id @default(cuid())
  name      String
  type      String
  project   Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  expenses  Expense[]
}

model Expense {
  id          String    @id @default(cuid())
  type        String
  title       String
  description String?
  amount      Float
  quantity    Float?
  unit        String?
  unitPrice   Float?
  supplier    String?
  supplierId  String?
  supplierRef Supplier? @relation(fields: [supplierId], references: [id], onDelete: SetNull)
  carrier     String?
  carrierId   String?
  carrierRef  Carrier?  @relation(fields: [carrierId], references: [id], onDelete: SetNull)
  worker      String?
  workerId    String?
  workerRef   Worker?   @relation(fields: [workerId], references: [id], onDelete: SetNull)
  hoursWorked Float?
  hourlyRate  Float?
  planned     Boolean   @default(false)
  date        DateTime
  category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  String?
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId   String
  createdAt   DateTime  @default(now())
}

model Supplier {
  id          String    @id @default(cuid())
  name        String
  contactName String?
  phone       String?
  website     String?
  address     String?
  latitude    Float?
  longitude   Float?
  hasDelivery Boolean   @default(false)
  isFavorite  Boolean   @default(false)
  notes       String?
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  expenses    Expense[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Carrier {
  id           String    @id @default(cuid())
  name         String
  phone        String?
  website      String?
  vehicle      String?
  licensePlate String?
  isFavorite   Boolean   @default(false)
  notes        String?
  user         User      @relation(fields: [userId], references: [id])
  userId       String
  expenses     Expense[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Worker {
  id         String    @id @default(cuid())
  name       String
  phone      String?
  website    String?
  specialty  String?
  isFavorite Boolean   @default(false)
  notes      String?
  user       User      @relation(fields: [userId], references: [id])
  userId     String
  expenses   Expense[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model News {
  id        String         @id @default(cuid())
  title     String
  content   String
  author    User           @relation(fields: [authorId], references: [id])
  authorId  String
  reactions NewsReaction[]
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}

model NewsReaction {
  id     String @id @default(cuid())
  type   String
  news   News   @relation(fields: [newsId], references: [id], onDelete: Cascade)
  newsId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  @@unique([newsId, userId])
}
