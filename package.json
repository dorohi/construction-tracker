{
  "name": "construction-tracker",
  "private": true,
  "scripts": {
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev": "pnpm run dev:backend & pnpm run dev:frontend",
    "build": "pnpm --filter shared build && pnpm --filter backend build && pnpm --filter frontend build",
    "db:push": "pnpm --filter backend prisma db push",
    "db:seed": "pnpm --filter backend prisma db seed"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "prisma",
      "sharp"
    ]
  }
}